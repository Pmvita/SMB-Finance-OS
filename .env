# =============================================================================
# SMB FINANCE OS - ROOT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains all environment variables for the entire project
# Copy this to .env and fill in your actual values

# =============================================================================
# FLASK/BACKEND CONFIGURATION
# =============================================================================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/smb_finance_os
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/smb_finance_os_test

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# FILE STORAGE (AWS S3)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=smb-finance-os-uploads

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_LOG_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100/hour

# =============================================================================
# MONITORING
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1
NEXT_PUBLIC_APP_NAME=SMB Finance OS
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# MOBILE APP CONFIGURATION (React Native/Expo)
# =============================================================================
API_BASE_URL=http://localhost:5000/api/v1
API_TIMEOUT=30000

# =============================================================================
# ANALYTICS (Shared)
# =============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# FEATURE FLAGS (Shared)
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
ENABLE_MOCK_DATA=false
ENABLE_ANALYTICS=true